.logo {
    height: 150rpx;
    width: 150rpx;
    background: #f7f9fa;
    border: 5rpx inset white;
    border-radius: 15rpx;
}

.UCenter-bg {
    background-size: cover;
    height: 400rpx;
    display: flex;
    justify-content: center;
    padding-top: 20rpx;
    overflow: hidden;
    position: relative;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
    opacity: 0.8;
}

.UCenter-bg image {
    width: 180rpx;
    height: 180rpx;
    border-radius: 10%;
}

.UCenter-bg .gif-wave {
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;
    height: 100rpx;
}