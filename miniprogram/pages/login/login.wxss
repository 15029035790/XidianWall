page {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  background: #f7f9fa; 
}

.box {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.logo {
    height: 180rpx;
    width: 180rpx;
    background: #f7f9fa;
    border: 5rpx inset white;
    border-radius: 15rpx;
}

.welcome {
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-size: medium;
    font-weight: bold;
    margin-top: 50rpx;
}

.tip {
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-size: medium;
    font-weight: bold;
    margin-top: 50rpx;
    margin-bottom: 50rpx;
}