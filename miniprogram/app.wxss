@import "colorui/main.wxss";
@import "colorui/icon.wxss";

.divider {
  background: rgba(191, 191, 191, 1);
  border: 1rpx solid rgba(191, 191, 191, 1);
  margin: 0rpx 20rpx;
}

.flexBox {
  width: 100%;
  background: #f7f9fa;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo {
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.avatar {
  border-radius: 50%;
  background-size: cover;
  background-color: #f7f9fa;
}

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}